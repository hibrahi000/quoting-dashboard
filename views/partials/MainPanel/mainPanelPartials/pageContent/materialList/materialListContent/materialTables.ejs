

    <% MaterialDB.forEach(category => { %>
        <div class="row">
            <div class="col-lg-12 col-md-8">
            <div class="card">
                <div class="card-header card-header-sky  ">
                <h4 class="card-title">Category: <%= category.Category%> </h4>

                </div>
                <div class="card-body table-responsive">
                <table class="table table-hover">
                    <thead class="text-muted">
                        <th>No.</th>
                        <th>Material Name</th>
                        
                    </thead>
                    <tbody>
            <!-- Over here we need to use the for each array value method so that we just need to list out the pending quotes in the data base  -->
            <% category.Material.forEach((material,index) => { %>
                    <tr class="text-dark">
                        <td><%=index+1%></td>
                        <td><%=material.MaterialName%></td>
                        <!-- <td> 
                            <div class="form-group">
                            <label class="bmd-label-floating">Material</label>
                            <input type="text" class="form-control"  ></td>
                        </div> -->

                    </tr>
            <% }) %>
                    </tbody>
                </table>
                </div>
            </div>
            </div>
        </div>
    <% })%>
